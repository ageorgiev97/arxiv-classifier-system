{
  "data": {
    "hf_dataset_path": "../data/hf_dataset",
    "category_config_path": "../data/processed/category_config.json",
    "num_classes": 50,
    "multilabel": true
  },
  "model": {
    "pretrained_name": "allenai/scibert_scivocab_uncased",
    "max_length": 256,
    "dropout": 0.1
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 2e-05,
    "warmup_ratio": 0.1,
    "epochs": 5,
    "early_stopping_patience": 2,
    "use_focal_loss": true,
    "focal_gamma": 2.0
  }
}